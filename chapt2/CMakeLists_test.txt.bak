cmake_minimum_required(VERSION 3.8)
project(ros2_cpp)
add_executable(ros2_cpp_node ros2_cpp_node.cpp)

find_package(rclcpp REQUIRED) #get required include and library files.
message(STATUS ${rclcpp_INCLUDE_DIRS})
message(STATUS ${rclcpp_LIBRARIES})

#contain the include files.
target_include_directories(ros2_cpp_node
    PUBLIC ${rclcpp_INCLUDE_DIRS}
)

#contain the library files.
target_link_libraries(ros2_cpp_node ${rclcpp_LIBRARIES})





